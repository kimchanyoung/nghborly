<% if transaction.transaction_type == 'request' %>
<%= image_tag(transaction.request.requester.picture, class:"profpic", height:"80", width:"80", align:"left") %>
<%= link_to transaction.request.requester.first_name, user_path(transaction.request.requester) %> has made a request <%= time_ago_in_words(transaction.created_at) %> ago.
<% elsif transaction.transaction_type == 'response' %>
<%= image_tag(transaction.request.requester.picture, class:"profpic", height:"100", width:"100", align:"left") %>
<%= link_to transaction.request.responder.first_name, user_path(transaction.request.responder) %> has responded to <%= link_to transaction.request.requester.first_name, user_path(transaction.request.requester) %>'s request <%= time_ago_in_words(transaction.created_at) %> ago!
<% elsif transaction.transaction_type == 'fulfillment' %>
<%= image_tag(transaction.request.requester.picture, class:"profpic", height:"100", width:"100", align:"left") %>
<%= link_to transaction.request.responder.first_name, user_path(transaction.request.responder) %> has fulfilled <%= link_to transaction.request.requester.first_name, user_path(transaction.request.requester) %>'s request <%= time_ago_in_words(transaction.created_at) %> ago!
<% else %>
Poop
<% end %>

