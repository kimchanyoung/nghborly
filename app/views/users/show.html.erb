<div class='row'>
<div class='small-12 small-centered text-center columns'>
<p class="user-title"><%= @user.first_name %>'s Profile</p>
</div>
</div>

<div class='row'>
<div class='small-12 small-centered text-center columns'>
<img class="profpic" width="150" height="150" src="<%= @user.picture %>" alt="<%= @user.first_name %>">
</div>
</div>

<div class='row'>
<div class='small-12 small-centered text-center columns'>
<p class='sub-userheader'><%= @user.first_name %>'s Good Nghbor Points: <%= @user.vote_count %></p>
<p class='sub-userheader'><%= @user.first_name %>'s Recent Activity:</p>
</div>
</div>

<% @transactions.each do |transaction| %>
<div class="row">
<div class="small-12 small-centered text-center columns">
<ul class='user-transactions'>
  <li><%= render 'users/users_transactions.html.erb', transaction: transaction %></li>
  </ul>
</div>
</div>
<% end %>



